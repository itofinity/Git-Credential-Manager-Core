<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200"
        Width="400" Height="200"
        x:Class="Atlassian_Authentication_Helper_App.Views.UserPassWindow"
        Title="UserPass">
    <StackPanel Margin="10">
        <TextBox Watermark="Username" Text="{Binding Path=Username}"/>
        <TextBox Watermark="Password" PasswordChar="*" Text="{Binding Path=Password}"/>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Width="160" Margin="10" Command="{Binding LoginCommand}" CommandParameter="Button">Login</Button>
            <Button Width="160" Margin="10" Command="{Binding CancelCommand}" CommandParameter="Button">Cancel</Button>
        </StackPanel>            
	</StackPanel>
</Window>
