<Window xmlns="https://github.com/avaloniaui" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="240" Width="400" Height="240" x:Class="Atlassian_Authentication_Helper_App.Views.AuthCodeWindow" Title="AuthCode">
    <StackPanel Margin="10">
        <Image Classes="Icon" Source="/Assets/ecosystem-gradient-blue@2x.png"/>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Border Classes="ButtonPrimary">
                <Button Classes="Primary" Command="{Binding AuthenticateCommand}" CommandParameter="Button">Authenticate</Button>
            </Border>
            <Border Classes="ButtonSecondary">
                <Button Classes="Secondary" Command="{Binding CancelCommand}" CommandParameter="Button">Cancel</Button>
            </Border>
        </StackPanel>
    </StackPanel>
</Window>